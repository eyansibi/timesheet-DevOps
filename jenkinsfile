pipeline {
    agent any

    tools { 
        jdk 'JAVA_HOME' 
        maven 'M2_HOME' // Utilise le bon nom d√©fini dans Jenkins
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/eyansibi/timesheet-DevOps.git'
            }
        }

        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }


        stage('Deploy to Nexus') {
            steps {
                script {
                        sh 'mvn deploy -Dmaven.test.skip=true' ;
                    }
                }
            }
        }
    }


pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube-Docker' // Nom du serveur SonarQube dans Jenkins
    }

    stages {

        stage('Infos Git') {
            steps {
                bat 'git --version'
            }
        }

        stage('Nombre de commits') {
            steps {
                bat 'git rev-list --count HEAD'
            }
        }

        stage('Liste des commits') {
            steps {
                bat 'git log --oneline -5'
            }
        }

        stage('Analyse SonarQube') {
            steps {
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    // Utilisation du scanner SonarQube installé via Jenkins
                    bat "%SONAR_SCANNER_HOME%\\bin\\sonar-scanner.bat ^
                        -Dsonar.projectKey=timesheet-devops
                        -Dsonar.projectName=Timesheet DevOps
                        -Dsonar.sources=."
                }
            }
        }

    }

    post {
        success {
            echo "Pipeline terminée avec succès ✅"
        }
        failure {
            echo "Pipeline échouée ❌"
        }
    }
}

pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube-Docker' // Nom du serveur SonarQube dans Jenkins
    }

    stages {

        stage('Analyse SonarQube') {
            steps {
                echo 'Analyse SonarQube en cours...'
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    // Utilisation du scanner installé via Jenkins
                    bat """
                    %SONAR_SCANNER_HOME%\\bin\\sonar-scanner.bat ^
                        -Dsonar.projectKey=springboot-pfe ^
                        -Dsonar.projectName=Spring Boot PFE ^
                        -Dsonar.sources=.
                    """
                }
            }
        }

    }

    post {
        success {
            echo 'Analyse SonarQube terminée avec succès ✅'
        }
        failure {
            echo 'Analyse SonarQube échouée ❌'
        }
    }
}

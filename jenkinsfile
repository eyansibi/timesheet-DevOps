pipeline {
    agent any

    tools { 
        jdk 'JAVA_HOME' 
        maven 'M2_HOME'
    }

    environment {
        MAVEN_USERNAME = credentials('admin') // Replace 'nexus-username' with your actual Jenkins credentials ID
        MAVEN_PASSWORD = credentials('nexus') // Replace 'nexus-password' with your actual Jenkins credentials ID
    }

    stages {
        stage('GIT') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/eyansibi/timesheet-DevOps.git'
            }
        }

        stage('Compile Stage') {
            steps {
                sh 'mvn clean compile'
            }
        }

        stage('Deploy to Nexus') {
            steps {
                script {
                    // Use Maven settings.xml for passing credentials securely
                    sh """
                        mvn deploy -Dmaven.test.skip=true -Dusername=${MAVEN_USERNAME} -Dpassword=${MAVEN_PASSWORD}
                    """
                }
            }
        }
    }
}

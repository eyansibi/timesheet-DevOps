pipeline {
    agent any

    environment {
        SONARQUBE_ENV = 'SonarQube-Docker' // Nom du serveur SonarQube dans Jenkins
    }

    stages {

        stage('Infos Git') {
            steps {
                bat 'git --version'
            }
        }

        stage('Nombre de commits') {
            steps {
                bat 'git rev-list --count HEAD'
            }
        }

        stage('Liste des commits') {
            steps {
                bat 'git log --oneline -5'
            }
        }

        stage('Analyse SonarQube') {
            steps {
                // Avec injection des credentials et du serveur SonarQube
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    bat """
                    sonar-scanner ^
                    -Dsonar.projectKey=mon-projet ^
                    -Dsonar.projectName=mon-projet ^
                    -Dsonar.sources=. ^
                    -Dsonar.host.url=http://localhost:9000
                    """
                }
            }
        }

    }

    post {
        success {
            echo "Pipeline terminée avec succès ✅"
        }
        failure {
            echo "Pipeline échouée ❌"
        }
    }
}
